<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="iitd.messfeeback.myapplication.Forgotpassword"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Change your password"
                android:id="@+id/loginSubHeading"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:layout_margin="16dp"
                android:textColor="@color/colorAluminium"
                />


            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Enter new password"
                android:inputType="textPassword"

                />
            <EditText
                android:id="@+id/editTextNewRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Confirm new password"
                android:inputType="textPassword"

                />

            <EditText
                android:id="@+id/editTextOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Enter OTP"
                android:inputType="textPassword"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OTP has been sent to your email id."
                android:id="@+id/otptext"
                android:layout_gravity="left"
                android:textSize="10dp"
                android:layout_margin="16dp"
                android:textColor="@color/colorAluminium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Didn't recieved any? Resend OTP."
                android:id="@+id/nootptext"
                android:layout_gravity="left"
                android:textSize="12dp"
                android:layout_margin="16dp"
                android:textColor="@color/colorAluminium"
                />

            <Button
                android:id="@+id/buttonUpdatepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:text="Update"
                android:textColor="@color/colorWhite"
                android:background="@drawable/roundbutton"/>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
